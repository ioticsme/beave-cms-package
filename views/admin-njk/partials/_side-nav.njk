                                path(d='M4.23179 19.7C3.83179 19.3 3.83179 18.7 4.23179 18.3L9.73179 12.8C10.1318 12.4 10.7318 12.4 11.1318 12.8C11.5318 13.2 11.5318 13.8 11.1318 14.2L5.63179 19.7C5.23179 20.1 4.53179 20.1 4.23179 19.7Z' fill='currentColor')
                    span.menu-title Configurations
                    span.menu-arrow
                .menu-sub.menu-sub-accordion
                    .menu-item
                        a.menu-link(href='/admin/config/admin' class=`${activeNav == `/admin/config/admin` ? 'active' : ''}`)
                            span.menu-bullet
                                span.bullet.bullet-dot
                            span.menu-title Admin
                    .menu-item
                        a.menu-link(href='/admin/config/country' class=`${activeNav == `/admin/config/country` ? 'active' : ''}`)
                            span.menu-bullet
                                span.bullet.bullet-dot
                            span.menu-title Country
                    .menu-item
                        a.menu-link(href='/admin/config/language' class=`${activeNav == `/admin/config/language` ? 'active' : ''}`)
                            span.menu-bullet
                                span.bullet.bullet-dot
                            span.menu-title Languages
                    .menu-item
                        a.menu-link(href='/admin/config/brand' class=`${activeNav == `/admin/config/brand` ? 'active' : ''}`)
                            span.menu-bullet
                                span.bullet.bullet-dot
                            span.menu-title Brands
                    .menu-item
                        a.menu-link(href='/admin/config/content-type' class=`${activeNav == `/admin/config/content-type` ? 'active' : ''}`)
                            span.menu-bullet
                                span.bullet.bullet-dot
                            span.menu-title Content Type
                    .menu-item
                        a.menu-link(href='/admin/config/admin-nav' class=`${activeNav == `/admin/config/admin-nav` ? 'active' : ''}`)
                            span.menu-bullet
                                span.bullet.bullet-dot
                            span.menu-title Admin Nav
                    .menu-item
                        a.menu-link(href='/admin/config/app-settings' class=`${activeNav == `/admin/config/app-settings` ? 'active' : ''}`)
                            span.menu-bullet
                                span.bullet.bullet-dot
                            span.menu-title App Settings
            hr
        each navSection, section_index in mainNav
            .menu-item.pt-5
                .menu-content
                    span.menu-heading.fw-bold.text-uppercase.fs-7 #{navSection.section}
            each navItem, item_index in navSection.items
                if navItem.expandable
                    .menu-item.menu-accordion(data-kt-menu-trigger='click' class=`${activeNav.includes(`${navItem.path}`) ? 'here show' : ''}`)
                        span.menu-link
                            span.menu-icon
                                //- <i class="fonticon-bicycle"></i>
                                span.svg-icon.svg-icon-2 !{navItem.icon}
                            span.menu-title #{navItem.label}
                            span.menu-arrow
                        .menu-sub.menu-sub-accordion
                            each child, child_index in navItem.child
                                .menu-item
                                    a.menu-link(href=`${child.path}` class=`${activeNav == `${child.path}` ? 'active' : ''}`)
                                        span.menu-bullet
                                            span.bullet.bullet-dot
                                        span.menu-title #{child.label}
                else
                    .menu-item
                        a.menu-link(href=`${navItem.path}` class=`${activeNav == `${navItem.path}` ? 'active' : ''}`)
                            span.menu-icon
                                span.svg-icon.svg-icon-2 !{navItem.icon}
                            span.menu-title #{navItem.label}
</div>
