{% if authUser.brand %}
  <div id="beave_header" class="d-flex align-items-stretch" data-beave-menu-trigger="auto" data-beave-menu-overflow="false" data-beave-menu-permanent="true" data-beave-menu-placement="bottom-end">
    <div id="beave_header_toggle" class="d-flex align-items-center" data-beave-search-element="toggle">
      <button class="btn btn-icon btn-custom btn-icon-muted btn-active-light btn-active-color-primary w-100">
        <span class="svg-icon svg-icon-1">{{ authUser.brand.name.en }} | {{ authUser.brand.country_code | upper }}</span>
      </button>
    </div>
  </div>
{% endif %}