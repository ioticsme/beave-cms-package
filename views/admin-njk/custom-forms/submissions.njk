{% extends "../layouts/master.njk" %}

{% block csslib %}
	<link href='/cms-static/admin/assets/plugins/custom/datatables/datatables.bundle.css' rel='stylesheet' type='text/css'/>

{% endblock %}

{% block jslib %}
	{# // begin::Vendors Javascript(used by this page) #}
	<script src='/cms-static/admin/assets/plugins/custom/datatables/datatables.bundle.js'></script>
	{# // end::Vendors Javascript #}
	{# // begin::Custom Javascript(used by this page) #}
	<script src='/cms-static/admin/assets/js/custom/apps/subscriptions/list/export.js'></script>
	{# //- script(src='/cms-static/admin/assets/js/custom/cms/subscriptions/list/list.js') #}
	<script src='/cms-static/admin/assets/js/custom/cms/banner-list.js'></script>
	{# //- script(src='/cms-static/admin/assets/js/widgets.bundle.js') #}
	{# //- script(src='/cms-static/admin/assets/js/custom/widgets.js') #}

	<script src='/cms-static/admin/assets/js/custom/utilities/modals/create-app.js'></script>
	<script src='/cms-static/admin/assets/js/custom/utilities/modals/users-search.js'></script>
	{# // end::Custom Javascript #}

	{# //- custom functions  #}
	<script src='/cms-static/common/js/custom-functions.js'></script>
{% endblock %}

{% block content %}
	<div class="d-flex flex-column flex-column-fluid">
		<div class="app-toolbar py-3 py-lg-6" id="kt_app_toolbar">
			<div class="app-container container-xxl d-flex flex-stack" id="kt_app_toolbar_container">
				<div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
					<h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">Custom Form Submissions</h1>
					<ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
						<li class="breadcrumb-item text-muted">
							<a class="text-muted text-hover-primary" href="/admin/dashboard">Home</a>
						</li>
						<li class="breadcrumb-item">
							<span class="bullet bg-gray-400 w-5px h-2px"></span></li>
						<li class="breadcrumb-item text-muted">
							<a class="text-muted text-hover-primary" href="/admin/custom-forms">Custom Forms</a>
						</li>
						<li class="breadcrumb-item">
							<span class="bullet bg-gray-400 w-5px h-2px"></span></li>
						<li class="breadcrumb-item text-muted">Submissions</li>
					</ul>
				</div>
				<div class="d-flex align-items-center gap-2 gap-lg-3">
					<a class="btn btn-sm fw-bold btn-primary" href="/admin/custom-forms/add">Create New Form</a>
				</div>
			</div>
		</div>
		<div class="app-content flex-column-fluid" id="kt_app_content">
			<div class="app-container container-xxl" id="kt_app_content_container">
				<div class="card">
					<div class="card-header border-0 pt-6"></div>
					<div class="card-body pt-0">
						<table class="table table-responsive fs-6 gy-5" id="kt_subscriptions_tabl">
							<thead>
								<tr class="text-start text-muted fw-bold fs-7 text-uppercase gs-0">
									<th class="min-w-125px w-400px">Field Values</th>
									<th class="min-w-125px">Type</th>
									<th class="min-w-125px">Created Date</th>
									<th class="text-end min-w-70px">Actions</th>
								</tr>
							</thead>
							<tbody class="text-gray-600 fw-semibold">

								{% for item in data %}
									<tr>
										<td>
											<code>{{ JSON.stringify(item.field_values) }}</code>
										</td>
										<td>
											<a class="badge badge-light-primary">{{ item.type }}</a>
										</td>
										<td>{{ item.date_created }}</td>
										<td class="text-end">
											<a class="btn btn-light btn-active-light-primary btn-sm" href="#" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">Actions<span class="svg-icon svg-icon-5 m-0">
													<svg width="24" height="24" viewbox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
														<path d="M11.4343 12.7344L7.25 8.55005C6.83579 8.13583 6.16421 8.13584 5.75 8.55005C5.33579 8.96426 5.33579 9.63583 5.75 10.05L11.2929 15.5929C11.6834 15.9835 12.3166 15.9835 12.7071 15.5929L18.25 10.05C18.6642 9.63584 18.6642 8.96426 18.25 8.55005C17.8358 8.13584 17.1642 8.13584 16.75 8.55005L12.5657 12.7344C12.2533 13.0468 11.7467 13.0468 11.4343 12.7344Z" fill="currentColor"></path>
													</svg>
												</span>
											</a>
											<div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-semibold fs-7 w-225px py-4" data-kt-menu="true">
												<div class="menu-item px-3">
													<a href="/admin/custom-forms/edit/{{item._id}}" class="menu-link px-3">View</a>
												</div>
												<div class="menu-item px-3">
													<a href="/admin/custom-forms/submissions/{{item._id}}" class="menu-link px-3">View Submission</a>
												</div>
												{% set url = "/admin/custom-forms/change-status" %}
												{% if item.published %}
													<div class="menu-item px-3">
														<a id="{{item._id}}" url="{{url}}" onClick="changeStatus(this,{{item.published}})" class="menu-link px-3">Unpublish</a>
													</div>
												{% else %}
													<div class="menu-item px-3">
														<a id="{{item._id}}" url="{{url}}" onClick="changeStatus(this,{{item.published}})" class="menu-link px-3">Publish</a>
													</div>
												{% endif %}
												<div class="menu-item px-3">
													<a id="{{item._id}}" url="/admin/custom-forms/delete" data-kt-subscriptions-table-filter="delete_row" onClick="deleteItem(this)" class="menu-link px-3">Delete</a>
												</div>
											</div>

										</td>
									</tr>
								{% endfor %}

							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}