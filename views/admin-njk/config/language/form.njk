{% block content %}
	<div class="d-flex flex-column flex-column-fluid">
		<div class="app-toolbar py-3 py-lg-6" id="beave_app_toolbar">
			<div class="app-container container-xxl d-flex flex-stack" id="beave_app_toolbar_container">
				<div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
					<h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">Add Language</h1>
					<ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
						<li class="breadcrumb-item text-muted">
							<a class="text-muted text-hover-primary" href="/admin/dashboard">Dashboard</a>
						</li>
						<li class="breadcrumb-item">
							<span class="bullet bg-gray-400 w-5px h-2px"></span></li>
						<li class="breadcrumb-item text-muted">Language <span class="bullet bg-gray-400 w-5px h-2px"></span></li>
						<li class="breadcrumb-item text-muted">New</li>
					</ul>
				</div>
			</div>
		</div>
		<div class="app-content flex-column-fluid" id="beave_app_content">
			<div class="app-container container-xxl" id="beave_app_content_container">
				<div class="card mb-5 mb-xl-10">
					<div class="card-header border-0 cursor-pointer" role="button" data-bs-toggle="collapse" data-bs-target="#kt_account_profile_details" aria-expanded="true" aria-controls="beave_account_profile_details">
						<div class="card-title m-0">
							<h3 class="fw-bold m-0">Language Form</h3>
						</div>
					</div>
					<div id="beave_account_settings_profile_details">
						<form class="form es-form" id="beave_account_profile_details_form" action="/admin/config/language/save" data-redirect-url="/admin/config/language" method="post" autocomplete="off">
							<input type="hidden" name="id" value="{{ language._id }}">
							<div class="card-body border-top p-9">
								<div class="row mb-6">
									<label class="col-lg-4 col-form-label required fw-semibold fs-6">Name</label>
									<div class="col-lg-8">
										<div class="row">
											<div class="col-lg-12 fv-row">
												<input type="text" class="form-control form-control-lg form-control-solid mb-3 mb-lg-0" name="name" placeholder="Name" value="{{ language.name }}">
												<div class="fv-plugins-message-container invalid-feedback" id="field-error-name"></div>
											</div>
										</div>
									</div>
								</div>
								<div class="row mb-6">
									<label class="col-lg-4 col-form-label required fw-semibold fs-6">Prefix</label>
									<div class="col-lg-8 fv-row">
										<input type="text" class="form-control form-control-lg form-control-solid" name="prefix" placeholder="Prefix" value="{{ language.prefix }}">
										<div class="fv-plugins-message-container invalid-feedback" id="field-error-prefix"></div>
									</div>
								</div>
								<div class="row mb-6">
									<label class="col-lg-4 col-form-label required fw-semibold fs-6">Direction</label>
									<div class="col-lg-8 fv-row">
										<input type="text" class="form-control form-control-lg form-control-solid" name="dir" placeholder="Direction" value="{{ language.dir }}">
										<div class="fv-plugins-message-container invalid-feedback" id="field-error-dir"></div>
									</div>
								</div>
								<div class="row mb-6">
									<label class="col-lg-4 col-form-label required fw-semibold fs-6">Is Default</label>
									<div class="col-lg-8 fv-row">
										<input class="form-check-input" type="checkbox" name="is_default" value="true">
										<div class="fv-plugins-message-container invalid-feedback" id="field-error-is_default"></div>
									</div>
								</div>
							</div>

							<div class="card-footer d-flex justify-content-end py-6 px-9">
								<button class="btn btn-primary form-submit-btn" id="beave_account_profile_details_submit" type="submit">
									<span class="preloader d-none">Updating</span>
									<span class="label">Save</span>
								</button>
							</div>

						</form>
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}